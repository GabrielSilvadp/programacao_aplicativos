package caixasnotas;

import java.io.DataInputStream;
import java.io.IOException;
import javax.swing.JOptionPane;

/**
 *
 * @author aluno
 */
public class CaixasNotas {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) throws IOException {
        // TODO code application logic here
        float nota1 = 0;
        float nota2 = 0;
        float media = 0;
        float soma = 0;
   
        String primeiraNota = JOptionPane.showInputDialog(null, "Entre com a primeira nota: ");
        nota1 = Float.parseFloat(primeiraNota);
        String segundaNota = JOptionPane.showInputDialog(null,"Entre com a segunda nota: ");
        nota2 = Float.parseFloat(segundaNota);

        soma = (nota1 + nota2);
        JOptionPane.showMessageDialog(null,"Resultado das somas: " + soma);

        media = (nota1 + nota2) / 2;
        JOptionPane.showMessageDialog(null,"Resultado da m√©dia: " + media);



}

    }
    

